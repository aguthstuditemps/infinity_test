#!/usr/bin/env ruby
#
# InfinityTest configuration setup
# You can see more information in here:
#    https://github.com/tomas-stefano/infinity_test/wiki/Customize-Infinity-Test
#
infinity_test do

  use :test_framework => :<%= @options[:test_framework] %>, 
      :app_framework => :<%= @options[:app_framework] %>, 
      :verbose => :<%= @options[:verbose] %>,
      :skip_bundler => :<%= @options[:skip_bundler] %>,
      :rubies => <%= @options[:rubies] %>

  <%# Infinity Test will ignore this folders and files when it runs%>
  ignore :folders => %w(), :files => %w()

end